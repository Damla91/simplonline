%h2= t('.title')

= nested_form_for Question.new, url: lesson_qcm_questions_path(@lesson, @qcm) do |f|

  = render partial: "form", locals: {f: f}

  = f.link_to_add t('.add_choice'), :choices, class: 'button'
  = f.submit t('.submit'), class: 'button'
  = link_to t('.cancel'), lesson_qcm_path(@lesson, @qcm), class: 'button'
