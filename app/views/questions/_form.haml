%p
  = f.label :question_title
  = f.text_field :title

- f.fields_for :choices do |choice|
  %p
    = choice.label :content
    = choice.text_field :content
    = choice.label :valid_answer
    = choice.check_box :valid_answer
    = choice.link_to_remove t('.remove')

  %p
    = f.link_to_add t('.add_choice'), :choices

