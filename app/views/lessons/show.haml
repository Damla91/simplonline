%h2= @lesson.title

%p= @lesson.online? ? t('.online') : t('.offline')

%section
  :markdown
    #{@lesson.description}

%ol
  - @lesson.chapters.each do |chapter|
    %li= link_to chapter.title, lesson_chapter_path(@lesson, chapter)
  - @lesson.qcms.each do |qcm|
    %li= link_to qcm.title, lesson_qcm_path(@lesson, qcm)
  - @lesson.exercices.each do |exercice|
    %li= link_to exercice.title, lesson_exercice_path(@lesson, exercice)
%p
  = link_to t('.lessons'), lessons_path, class: 'button'
  = link_to_next(@lesson.id, @lessons)
- unless current_user.remote?
  %br
  %p
    = link_to t('.edit'), edit_lesson_path(@lesson), class: 'button'
    = link_to t('.add_chapter'), new_lesson_chapter_path(@lesson), class: 'button'
    = link_to t('.add_qcm'), new_lesson_qcm_path(@lesson), class: 'button'
    = link_to t('.add_exercice'), new_lesson_exercice_path(@lesson), class: 'button'

